<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Planetarium" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/accent_teal</item>
        <item name="colorPrimaryVariant">@color/accent_aqua</item>
        <item name="colorOnPrimary">@color/background_dark</item>
        <item name="colorPrimaryContainer">@color/surface_dark</item>
        <item name="colorOnPrimaryContainer">@color/text_light</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/accent_gold</item>
        <item name="colorSecondaryVariant">@color/accent_gold</item>
        <item name="colorOnSecondary">@color/background_dark</item>
        <item name="colorSecondaryContainer">@color/surface_dark</item>
        <item name="colorOnSecondaryContainer">@color/text_light</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_light</item>
        <item name="colorOnBackground">@color/text_light</item>

        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Action bar -->
        <item name="colorSurfaceVariant">@color/surface_dark</item>

        <!-- Preference theme -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <!-- in res/values/themes.xml -->
    <style name="Theme.Planetarium.Settings" parent="Theme.Material3.DayNight">
        <!-- Customize as needed, inherits ActionBar from parent -->
        <item name="colorPrimary">@color/accent_teal</item>
        <!-- ... other common attributes ... -->
    </style>
</resources>
